<Alloy>
    <!-- Main Window -->
    <Window id="todoWin" title="Todo">
  	
        <!-- header -->
        <View id="header">
            <Label id="title">Login Here</Label>
            
            </View>
        	      <View> 
        		  <TextField id="email" hintText="Enter Email/UserId"/>  
                   <TextField id="password" hintText="Password" passwordMask="true"/> 
                   <Button id="Login" onClick="login_user">Login</Button>
                    </View> 	
             <View id="addReg"  onClick="goReg">
